---
layout: "base.njk"
eleventyImport:
  collections: ["posts"]
---

<article class="homepage">
  <h2>Last 10 posts:</h2>

  <ul class="post-list">
  {% for post in collections.post %}
    <li>
      <p>
        <h3><a href="{{post.url}}">{{post.data.title}}</a></h3>
        <time>{{post.date.getUTCFullYear()}}-{{post.date.getUTCMonth()}}-{{post.date.getUTCDate()}}</time>
        {% excerpt post %}
      </p>
    </li>
  {% endfor %}
  </ul>
</article>
