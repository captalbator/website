---
layout: base.njk
eleventyImport:
    collections: ["posts"]
pagination:
  data: collections.post
  size: 10
  alias: posts
  reverse: true
---

<article>
  <h1>Blog</h1>

  <ul class="post-list">
  {% for post in posts %}
    <li>
      <p>
      <a href="{{post.url}}">{{post.data.title}}</a>
      <time>{{post.date.getUTCFullYear()}}-{{post.date.getUTCMonth()}}-{{post.date.getUTCDate()}}</time>
      {% excerpt post %}
      </p>
    </li>
  {% endfor %}
  </ul>

  <nav class="page-nav">
  {% if pagination.href.previous %}
  <a class="previous-page" href="{{pagination.href.previous}}">&lt;&lt; previous</a>
  {% endif %}

  {% if pagination.href.next %}
  <a class="next-page" href="{{pagination.href.next}}">next &gt;&gt;</a>
  {% endif %}
  </nav>
  

</article>
