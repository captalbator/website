---
layout: base.njk
pagination:
  data: collections.tags
  size: 1
  alias: tag
permalink: "/tags/{{ tag | slugify }}/index.html"
---

<article>
  <h2>Posts with tag: {{tag}}</h2>

  {% set posts = collections.post | filterByTag(tag) %}
  <ul class="post-list">
  {% for post in posts %}
    <li>
      <p>
      <a href="{{post.url}}">{{post.data.title}}</a>
      <time>{{post.date.getUTCFullYear()}}-{{post.date.getUTCMonth()}}-{{post.date.getUTCDate()}}</time>
      {% excerpt post %}
      </p>
    </li>
  {% endfor %}
  </ul>
</article>
